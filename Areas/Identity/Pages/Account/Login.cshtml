@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center w-100 p-0 m-0 pb-sm-5">
    <div class="col-12 col-lg-6 m-0 position-relative" style="z-index: -10;">
        <img class="banner-identity" src="~/assets/imgs/back-login.jpg" alt="" srcset="">
    </div>
    <div class="col-12 col-lg-5 p-0 m-0 m-sm-5">
        <section>
            <form id="account" method="post" class="bg-light">
                <div class="px-4 pt-4 pb-2">
                    <h1 class="title-identity mb-4">Login</h1>
                    <div id="errors-div" asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form mb-3">
                        <div class="form-identity">
                            <i class="bi bi-envelope"></i>
                            <input asp-for="Input.Email" class="form-control input-identity" autocomplete="username"
                                aria-required="true" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger text-validation"></span>
                    </div>
                    <div class="form mb-3">
                        <div class="form-identity">
                            <i class="bi bi-lock-fill"></i>
                            <input asp-for="Input.Password" class="form-control input-identity"
                                autocomplete="current-password" aria-required="true" />
                        </div>

                        <span asp-validation-for="Input.Password" class="text-danger text-validation"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label mt-2">
                                <input class="form-check-input " asp-for="Input.RememberMe" />
                                Lembrar?
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit"
                            class="w-100 btn btn-lg bg-primary fw-bold">Login</button>
                    </div>
                </div>
                <div class="text-center">
                    <div class="my-3">
                        <a class="link link-dark" id="forgot-password" asp-page="./ForgotPassword">Esqueceu a senha?</a>
                    </div>
                    <div class="my-3">
                        <a class="link link-dark" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar confirmação de Email</a>
                    </div>
                    <div class="m-0 p-3 login-footer bg-dark">
                        Não Possui Conta? <a asp-page="./Register"
                            asp-route-returnUrl="@Model.ReturnUrl">Cadastre-se</a>
                    </div>

                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
