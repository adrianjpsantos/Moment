@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-end pb-5">
    <div class="col position-relative m-4">
        <img class="banner-identity" src="~/assets/imgs/back-login.jpg" alt="" srcset="">
    </div>
    <div class="col-md-4 p-0 m-5">
        <section>
            <form id="account" method="post">
                <div class="p-4 bg-light">
                    <h1 class="title-identity">Login</h1>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control input-identity" autocomplete="username"
                            aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control input-identity"
                            autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label mt-2">
                                <input class="form-check-input " asp-for="Input.RememberMe" />
                                Lembrar?
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit"
                            class="w-100 btn btn-lg bg-primary fw-bold">Login</button>
                    </div>
                </div>
                <div>
                    <p hidden>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p class="m-0 bg-dark p-3 login-footer text-center">
                        Não Possui Conta? <a asp-page="./Register"
                            asp-route-returnUrl="@Model.ReturnUrl">Cadastre-se</a>
                    </p>
                    <p hidden>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
