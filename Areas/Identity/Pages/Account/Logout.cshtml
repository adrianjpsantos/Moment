@page
@model LogoutModel
@{
    ViewData["Title"] = "Sair";
}

<div class="row justify-content-center w-100 p-0 m-0 pb-sm-5">
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <div class="col-12 col-lg-5 p-0 m-0 m-sm-5">
                <section>
                    <form class="bg-light p-4" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <h1 class="title-identity">@ViewData["Title"]</h1>
                        <h1 class="subtitle-identity mb-4">Tem certeza? <span class="text-accent">@User.Identity?.Name.ToString()</span> </h1>
                        <button type="submit" class="w-100 btn btn-lg btn-danger fw-bold">Clique para sair</button>
                    </form>
                </section>
            </div>   
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
        }
    }
</header>
