@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="row w-100 p-0 m-0 pb-sm-5">
    <div class="col-12 p-0 m-0">
        <form class="bg-light p-4" id="delete-user" method="post">
            <h1 class="title-identity mb-4">@ViewData["Title"]</h1>
            <div class="alert alert-warning" role="alert">
                <span>
                    <strong>A exclusão desses dados removerá permanentemente sua conta, e isso não pode ser
                        Recuperado.</strong>
                </span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.RequirePassword)
            {
                <div class="form mb-3">
                    <div class="form-identity">
                        <i class="bi bi-key-fill"></i>
                        <input asp-for="Input.Password" class="form-control input-identity" aria-required="true" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger text-validation"></span>
                </div>
            }
            <button class="w-100 btn btn-lg btn-danger" type="submit">Deletar Dados e Fechar Minha Conta</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
