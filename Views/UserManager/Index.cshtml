@model Moment.Models.EntityDto.UserManagerIndexView
<h1 class="ms-2 text-primary">@ViewData["Title"]</h1>
<div class="d-flex gap-4 text-white">
    <partial name="_UserManagerNavPartial" />
    <div class="w-100">
        <form class="p-4" enctype="multipart/form-data" method="post" asp-controller="UserManager"
            asp-action="UpdateUser">
<div class="badge text-bg-success">@Model.SuccessMessage</div>
<div class="badge text-bg-danger">@Model.ErrorMessage</div>

            <div class="row">
                <div class="col-4 form-group">
                    <label asp-for="NameUser" class="form-label"></label>
                    <input asp-for="NameUser" class="form-control">
                    <span asp-validation-for="NameUser" class="text-danger"></span>
                </div>
                <div class="col-4 form-group">
                    <label asp-for="EmailUser" class="form-label"></label>
                    <input asp-for="EmailUser" class="form-control">
                    <span asp-validation-for="EmailUser" class="text-danger"></span>
                </div>
                <div class="col-4 form-group">
                    <label asp-for="PhoneUser" class="form-label"></label>
                    <input asp-for="PhoneUser" class="form-control">
                    <span asp-validation-for="PhoneUser" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="d-flex mt-3">
                    <h3 class="text-primary">Social</h3>
                </div>
                <div class="col-12 form-group">
                    <label asp-for="ProfilePicture" class="form-label"></label>
                    <input type="file" asp-for="ProfilePicture" class="form-control">
                    <input asp-for="ProfilePicture" class="form-control">
                    <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                </div>
                <div class="col-6 form-group">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-6 form-group">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="d-flex mt-3">
                    <h4 class="text-primary">Endere√ßo</h4>
                </div>
                <div class="col-8 col-md-5 form-group">
                    <label asp-for="StreetAddress" class="form-label"></label>
                    <input asp-for="StreetAddress" class="form-control">
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>
                <div class="col-4 col-md-2 form-group">
                    <label asp-for="NumberAddress" class="form-label"></label>
                    <input asp-for="NumberAddress" class="form-control">
                    <span asp-validation-for="NumberAddress" class="text-danger"></span>
                </div>
                <div class="col-12 col-md-5 form-group">
                    <label asp-for="DistrictAddress" class="form-label"></label>
                    <input asp-for="DistrictAddress" class="form-control">
                    <span asp-validation-for="DistrictAddress" class="text-danger"></span>
                </div>
                <div class="col-4 col-md-3 form-group">
                    <label asp-for="ZipCodeAddress" class="form-label"></label>
                    <input asp-for="ZipCodeAddress" class="form-control">
                    <span asp-validation-for="ZipCodeAddress" class="text-danger"></span>
                </div>
                <div class="col-4 col-md-6 form-group">
                    <label asp-for="CityAddress" class="form-label"></label>
                    <input asp-for="CityAddress" class="form-control">
                    <span asp-validation-for="CityAddress" class="text-danger"></span>
                </div>
                <div class="col-4 col-md-3 form-group">
                    <label asp-for="StateAddress" class="form-label"></label>
                    <input asp-for="StateAddress" class="form-control">
                    <span asp-validation-for="StateAddress" class="text-danger"></span>
                </div>
                <div class="col-12 col-md-6 form-group">
                    <label asp-for="ComplementAddress" class="form-label"></label>
                    <input asp-for="ComplementAddress" class="form-control">
                    <span asp-validation-for="ComplementAddress" class="text-danger"></span>
                </div>
            </div>
            <button class="mt-3 btn btn-secondary" type="submit">Salvar Preferencias</button>
        </form>
    </div>
</div>
