@model Moment.Models.EntityDto.UserManagerIndexView
<h1 class="ms-2 text-primary">@ViewData["Title"]</h1>
<div class="d-flex gap-4 text-white">
    <partial name="_UserManagerNavPartial" />
    <div class="w-100">
        <form class="p-4" enctype="multipart/form-data" asp-controller="UserManager" asp-action="UpdateUserInfo">
            <div class="row">
                <div class="col-4 form-group">
                    <label asp-for="Username" class="form-label"></label>
                    <input asp-for="Username" class="form-control">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="col-4 form-group">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-4 form-group">
                    <label asp-for="Phone" class="form-label"></label>
                    <input asp-for="Phone" class="form-control">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="d-flex mt-3">
                    <h3 class="text-primary">Social</h3>
                </div>
                <div class="col-12 form-group">
                    <label asp-for="Info.ProfilePicture" class="form-label"></label>
                    <input asp-for="Info.ProfilePicture" class="form-control">
                    <span asp-validation-for="Info.ProfilePicture" class="text-danger"></span>
                </div>
                <div class="col-6 form-group">
                    <label asp-for="Info.FirstName" class="form-label"></label>
                    <input asp-for="Info.FirstName" class="form-control">
                    <span asp-validation-for="Info.FirstName" class="text-danger"></span>
                </div>
                <div class="col-6 form-group">
                    <label asp-for="Info.LastName" class="form-label"></label>
                    <input asp-for="Info.LastName" class="form-control">
                    <span asp-validation-for="Info.LastName" class="text-danger"></span>
                </div>
                <div class="d-flex mt-3">
                    <h4 class="text-primary">Endere√ßo</h4>
                </div>
                <div class="col-8 col-md-5 form-group">
                    <label asp-for="Info.StreetAddress" class="form-label"></label>
                    <input asp-for="Info.StreetAddress" class="form-control">
                    <span asp-validation-for="Info.StreetAddress" class="text-danger"></span>
                </div>
                <div class="col-4 col-md-2 form-group">
                    <label asp-for="Info.NumberAddress" class="form-label"></label>
                    <input asp-for="Info.NumberAddress" class="form-control">
                    <span asp-validation-for="Info.NumberAddress" class="text-danger"></span>
                </div>
                <div class="col-12 col-md-5 form-group">
                    <label asp-for="Info.DistrictAddress" class="form-label"></label>
                    <input asp-for="Info.DistrictAddress" class="form-control">
                    <span asp-validation-for="Info.DistrictAddress" class="text-danger"></span>
                </div>
                <div class="col-4 col-md-3 form-group">
                    <label asp-for="Info.ZipCodeAddress" class="form-label"></label>
                    <input asp-for="Info.ZipCodeAddress" class="form-control">
                    <span asp-validation-for="Info.ZipCodeAddress" class="text-danger"></span>
                </div>
                <div class="col-4 col-md-6 form-group">
                    <label asp-for="Info.CityAddress" class="form-label"></label>
                    <input asp-for="Info.CityAddress" class="form-control">
                    <span asp-validation-for="Info.CityAddress" class="text-danger"></span>
                </div>
                <div class="col-4 col-md-3 form-group">
                    <label asp-for="Info.StateAddress" class="form-label"></label>
                    <input asp-for="Info.StateAddress" class="form-control">
                    <span asp-validation-for="Info.StateAddress" class="text-danger"></span>
                </div>
                <div class="col-12 col-md-6 form-group">
                    <label asp-for="Info.ComplementAddress" class="form-label"></label>
                    <input asp-for="Info.ComplementAddress" class="form-control">
                    <span asp-validation-for="Info.ComplementAddress" class="text-danger"></span>
                </div>
            </div>
            <button class="mt-3 btn btn-secondary" type="submit" >Salvar Preferencias</button>
        </form>
    </div>
</div>
