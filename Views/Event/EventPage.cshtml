@model Moment.Models.EntityDto.EventPageView
@{
    ViewData["Title"] = "Pagina do Evento";
}

<div class="page">
    <header class="position-relative">
        <img class="header-event-photo"
            src="https://media-blog.keeperformaturas.com.br/wp-content/uploads/2019/07/O-que-observar-ao-visitar-uma-festa-de-formatura.jpg"
            alt="" srcset="">
        <div class="container py-5">
            <span class="big-title">@Model.Name</span>
            <p class="event-sinopse w-50">
                @Model.Resume
            </p>
            <div class="d-flex gap-2">
                <div class="event-timer">
                    <span id="clock">20D : 15H : 30M</span>
                </div>
                <a src="#" class="d-flex flex-column justify-content-center align-items-center event-shop">
                    <i class="bi bi-cart-fill fs-5"></i>
                    <span class="fw-bold">Ingresso</span>
                </a>
            </div>
            <div class="d-flex flex-column mt-3">
                <span class="event-date">@Model.Date</span>
                <span class="event-local">@Model.CityAndState</span>
            </div>
        </div>
    </header>
    <content class="container event-info d-block">
        <h6 class="mt-3">Descrição</h6>
        <div class="d-flex py-2 align-items-start">
            <div class="event-description col-8">
                <div class="m-0">
                    @Html.Raw(Model.Description)
                </div>
            </div>
            <div class="col-4">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3686.397409149802!2d-48.54836028561401!3d-22.48926802875831!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94c7459baabaa92b%3A0xd1b954a115160672!2sEtec%20Comendador%20Jo%C3%A3o%20Rays!5e0!3m2!1spt-BR!2sbr!4v1676387736567!5m2!1spt-BR!2sbr"
                    width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </content>
    <footer>
        <div class="container py-3 d-flex gap-4">
            <a class="event-service-link" href="#">Denunciar Evento</a>
            <a class="event-service-link" data-bs-toggle="modal" data-bs-target="#terms-modal">Termos do Evento</a>
        </div>
        <div class="bg-primary">
            <div class="container d-flex py-4 gap-3">
                <article class="col-2 event-card event-promoter">
                    <h6>Organizador</h6>
                    <a class="w-100" href="#">
                        <img class="event-promoter-photo" src="" alt="Foto de Perfil do Promoter" srcset="">
                        <p>fdgfdgfdg</p>
                    </a>
                </article>
                <article class="event-card col-10">
                    <h6>Eventos Proximos</h6>
                    <content class="d-flex ">
                        <a href="#" class="event-link-card">
                            <img class="event-link-card-photo"
                                src="https://magazord-public.s3.amazonaws.com/rosaazul/img/2022/06/blog/12016/festa-infantil.jpg"
                                alt="" srcset="">
                            <p class="m-0">Reveillon Vira Jeri</p>
                        </a>
                    </content>
                </article>
            </div>
        </div>
    </footer>
</div>

<!--Terms Modal -->
<div class="modal fade" id="terms-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Termos do Evento</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Model.Terms
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/jquery.countdown-2.2.0/jquery.countdown.js"></script>
    <script src="~/lib/jquery.countdown-2.2.0/jquery.countdown.min.js"></script>
    <script>
        $('#clock').countdown('@Model.StartDate', function (event) {
            $(this).text(
                event.strftime('%D %H:%M')
            );
        });
    </script>
}