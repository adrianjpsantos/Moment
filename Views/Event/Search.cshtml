@model Moment.Models.EntityDto.EventSearchView

<div class="bg-black">
    <header class="container mb-2">
        <partial name="../Shared/_SearchContainer.cshtml" /> 
        <h2 class="title-page text-white">" @(Model.Texto != null ? Model.Texto : " ") "</h2>
        <div class="d-flex align-items-center">
            <p class="m-0 mt-3 p-0 text-primary fw-light"><span class="count-events">@Model.CountEvents</span> Eventos
                Encontrados...</p>
            <div class="flex-grow-1"></div>
        </div>
    </header>
</div>
<div class="bg-secondary text-white">
    <div class="container">
        <div class="content">
            <div style="min-height: 100vh;">
                <header class="list-thumb-title">
                    <h6></h6>
                </header>
                @if(Model.EventCards.Count > 0)
                {
                <div id="list-thumb-content" class="list-thumb-content-wrap hidden-scroll">

                    @foreach (var eventCard in Model.EventCards)
                    {
                        <a class="event-thumb" city-event="Macatuba,SC" asp-action="EventPage" asp-route-id="@eventCard.Id">
                            <img class="event-thumb-img" src="@eventCard.ThumbnailPath" />
                            <content class="event-thumb-info">
                                <span class="event-thumb-info-title">@eventCard.Name</span>
                                <span class="event-thumb-info-local">@eventCard.Address</span>
                                <span class="event-thumb-info-date">@eventCard.DateFormated</span>
                            </content>
                        </a>
                    }

                </div>
                }
                else
                {
                    <div class="text-center">
                        <h3>Nenhum Evento encontrado.</h3>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="../Shared/_SearchScripts.cshtml" />
}