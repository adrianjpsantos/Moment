<script>
    //SEARCH EVENT
    const url = '@Url.Action("Search","Event")';
    let inputTexto = $('#texto');
    let inputLocal = $('#local');
    let inputCategoria = $('#categoria');
    let inputValor = $('#valor');

    function searchEvent() {
        let newUrl = url + '?';
        if (inputTexto.val() != null || inputLocal.val() != null || inputCategoria.val() != null || inputValor.val() != null) {

             if (inputTexto != null && inputTexto.val() != '' && inputTexto.val() != null) {
                newUrl += `&texto=${inputTexto.val()}`;
            }

            if (inputLocal != null && inputLocal.val() != '' && inputLocal.val() != null) {
                newUrl += `&local=${inputLocal.val()}`;
            }
            if (inputCategoria != null && inputCategoria.val() != '' && inputCategoria.val() != null) {
                newUrl += `&categoria=${inputCategoria.val()}`;
            }
            if (inputValor.val() != 0) {
                newUrl += `&valor=${inputValor.val()}`;
            }

            $(location).attr('href', newUrl);
        }
    }
</script>
